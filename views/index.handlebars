<h1>Burgers</h1>

<h2>Burgers that are not Devour</h2>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{>burger/burger-block devoured=false}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured burgers</h2>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form id="create-form">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="creatingBurger" name="name">
    </div>

    <div class="form-group">
        <label for="devour">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" id="devoured" checked> Devoured<br>
        <input type="radio" name="devoured" value="0" id="notDevoured"> Ready to be Devour
    </div>

    <button type="submit">Add Burger</button>


</form>